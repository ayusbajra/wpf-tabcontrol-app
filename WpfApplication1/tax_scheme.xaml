<Window x:Class="WpfApplication1.tax_scheme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d" ResizeMode="NoResize" ShowInTaskbar="False"
        Title="Tax Scheme" Height="160" Width="250">

    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Tax Scheme Name" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Tax Name" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Tax Value" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <Button>Submit</Button>
        </StackPanel>
    </StackPanel>
</Window>
