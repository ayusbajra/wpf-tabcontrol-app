<UserControl x:Class="WpfApplication1.account"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Account Number" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Account Name" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Account Address" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <TextBlock Text="Account Date" Margin="0 0 10 0"/>
            <TextBox Width="100"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="20" Margin="10 5">
            <Button>Submit</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
